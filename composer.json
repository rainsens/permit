{
    "name": "rainsens/authorize",
    "description": "A Laravel RBAC authorization system based on http path",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rainsen",
            "email": "yusen@rainsen.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Rainsens\\Authorize\\": "src"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rainsens\\Authorize\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^9.4"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rainsens\\Authorize\\Providers\\AuthorizeServiceProvider"
            ],
            "aliases": {
                "Permits": "Rainsens\\Authorize\\Facades\\Authorize"
            }
        }
    }
}
